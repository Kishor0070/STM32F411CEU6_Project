#ifndef APP_HEADER_H_
#define APP_HEADER_H_

#include <stdint.h>
#include <stdbool.h>

typedef struct{
	volatile bool isReadyToTransmit;
	volatile bool isReadyToReceive;
	volatile uint8_t occupiedSize;
	volatile char txBuffer[20];
	volatile char rxBuffer[20];

} USART_BUFFER;




volatile USART_BUFFER *usart1_buf = NULL; // To be allocated when initializing the peripheral
volatile USART_BUFFER *usart2_buf = NULL; // To be allocated when initializing the peripheral
volatile USART_BUFFER *usart6_buf = NULL; // To be allocated when initializing the peripheral

#endif /* APP_HEADER_H_ */
