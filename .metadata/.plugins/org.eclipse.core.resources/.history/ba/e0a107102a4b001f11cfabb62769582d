#ifndef APP_HEADER_H_
#define APP_HEADER_H_

#include <stdint.h>
#include <stdbool.h>
#include <stddef.h>

typedef struct{
	volatile bool isReadyToTransmit;
	volatile bool isNewFrame;
	volatile uint8_t occupiedSize;
	volatile uint8_t rxOccupiedSize;
	volatile uint8_t txIndex;
	volatile uint8_t rxIndex;
	volatile char txBuffer[20];
	volatile char rxBuffer[20];

} USART_BUFFER;


extern volatile USART_BUFFER *usart1_buf; // To be allocated when initializing the peripheral
extern volatile USART_BUFFER *usart2_buf; // To be allocated when initializing the peripheral
extern volatile USART_BUFFER *usart6_buf; // To be allocated when initializing the peripheral

#endif /* APP_HEADER_H_ */
